<div class="navbar">
  <%= link_to root_path do %>
  <%= image_tag "logo.png", alt: "blog-log", class: "logo" %>
  <% end %>
  <div class="navbar-buttons">
    <button class="button" type="button" name="button">SIGN IN</button>
    <span><img class="open-menu" src="imgages/menu.svg" alt=""/></span>
  </div>
</div>

<div class="overlay">
  <h2 class="nav-title"></h2>
  <nav class="overlay-menu">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Blog", articles_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><img class="close-menu" src="images/close.svg" alt=""/></li>
    </ul>
  </nav>
</div>
<% if current_page?(root_path) %>
  <div class="center jumbotron">
    <div class="container">
    <h1>Blog</h1>
    <%= button_to "Sign up now", "#", class: "button", method: "get" %>
    </div>
  </div>
<% end %>

